{
	"name": "svelte-cookie-consent",
	"version": "2.2.1",
	"description": "A GDPR compliant cookie banner",
	"license": "MIT",
	"author": {
		"name": "Sebastiano Racca",
		"url": "https://racca.me",
		"email": "sebastiano@racca.me"
	},
	"repository": {
		"url": "git+https://github.com/SebaOfficial/svelte-cookie-consent.git"
	},
	"homepage": "https://cookie-consent.js.org/",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm build:docs && pnpm build:demo && pnpm build:dist",
		"build:demo": "vite build",
		"build:docs": "typedoc",
		"build:js": "vite -c vite.js.config.ts build && mv dist-js/* dist/ && rmdir dist-js",
		"build:dist": "pnpm prepack && pnpm build:js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky",
		"prepack": "svelte-kit sync && svelte-package && publint && pnpm build:js",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/package": "^2.3.12",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@types/js-cookie": "^3.0.6",
		"@types/node": "^24.0.10",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"sass": "^1.89.2",
		"svelte": "^5.35.2",
		"svelte-check": "^4.2.2",
		"typedoc": "^0.28.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^6.3.5"
	},
	"dependencies": {
		"js-cookie": "^3.0.5",
		"uuid": "^11.1.0"
	},
	"keywords": [
		"svelte",
		"cookie",
		"cookies",
		"cookie-banner",
		"gdpr"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"esbuild"
		]
	}
}
